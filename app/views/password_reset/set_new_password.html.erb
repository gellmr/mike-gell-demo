<div class="row">
  <div class="col-xs-12">

    <div class="row">
      <div class="col-xs-12">
        <div class="text-center">
          <h3>
            Password Reset - <%= @user.email %>
          </h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <h4>
            You have activated your Password Reset Token.
        </h4>
      </div>
      
      <div class="col-xs-12">
        Your account is now locked and inaccessible until you provide a new password.<br />
        If you take longer than ten minutes to set a new password, you will need to go back and <%= link_to "request a new token", new_password_reset_path %>
      </div>

      <div class="col-xs-12 well solidBackground" style="margin-top: 20px;">

        <%= form_tag change_password_path%>
          
          <%= hidden_field_tag 'email', @user.email %>

          <div class="form-group">
            <%=
            password_field_tag(
              :new_password,  # name and id
              "New Password", # value
              {
                class: "form-control",
                value: ''
              }
            )
            %>
          </div>

          <div class="form-group">
            <%=
            password_field_tag(
              :password_confirm,  # name and id
              "Confirm Password", # value
              {
                class: "form-control",
                value: ''
              }
            )
            %>
          </div>

          <div class="form-group">
            <%=
            submit_tag(
              "Submit",
              id: 'submit_change_password',
              class: "btn btn-primary pull-right"
            )
            %>
          </div>

        </form>
      </div>
 
    </div>
  </div>
</div>
