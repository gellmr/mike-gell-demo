<div class="row">
  <div class="col-xs-12">

    <div class="row">
      <%= render "/partials/flash_message" %>
      <div class="col-xs-12">
        <h3>
          Password Reset
        </h3>
      </div>
    </div>

    <div class="row well solidBackground">

      <p>
        Please provide your email address below.
      </p>

      <%= form_tag create_password_reset_path %>

        <div class="form-group">
          <%=
          text_field_tag(
            'email',              # name
            "Your Email Address", # value
            {
              type:  "text",
              class: "form-control",
              id: 'password-reset-email'
            }
          )
          %>
        </div>

        <div class="form-group">
          <%=
          submit_tag(
            "Submit",
            id: 'submit_request_reset_pw',
            class: "btn btn-primary pull-right"
          )
          %>
        </div>

      </form>
    </div>

  </div>
</div>