          <div class="col-xs-6 col-sm-4 loggedInAs">

            <div class="row">
              <div class="col-xs-12">
                <a class="navbar-brand mg-navbar-title" href="#" style="margin-left: -16px;">
                  Fuzzy Bear Electronics
                </a>
              </div>
            </div>

            <% if current_user %>
            <div class="row">
