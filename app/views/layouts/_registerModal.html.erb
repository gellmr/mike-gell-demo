<div class="modal" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <form role="form">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Create Account</h4>
        </div>

        <div class="modal-body">

          <div class="form-group email">
            <label for="inputEmail">Email address</label>
            <span class='error-message'></span>
            <input class="form-control" type="email" name="inputEmail">
          </div>

          <div class="form-group password">
            <label for="inputPassword">Password</label>
            <span class='error-message'></span>
            <input class="form-control" type="password" name="inputPassword">
          </div>
          
          <div class="form-group passwordConfirmation">
            <label for="inputPasswordConfirmation">Confirm Password</label>
            <span class='error-message'></span>
            <input class="form-control" type="password" name="inputPasswordConfirmation">
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-primary pull-right submitButton">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>