<label for="input_address">Address <%= address.id %></label>
<div id="form-group-address" class="form-group well">

  <div class="form-group ">
    <%= link_to user_user_address_path(@user, address.id), method: :delete, class: "pull-right" do %>
      <small>Delete Address</small>
    <% end %>
  </div>

  <div class="form-group">
    <small><%= f.label :line_1, 'Address Line 1' %></small>
    <%= f.text_field :line_1, type: 'text', id: "address-line1-input-#{address.id}", :class => 'form-control'%>
  </div>

  <div class="form-group">
    <small><%= f.label :line_2, 'Address Line 2' %></small>
    <%= f.text_field :line_2, type: 'text', id: "address-line2-input-#{address.id}", :class => 'form-control'%>
  </div>

  <div class="form-group">
    <small><%= f.label :city, 'City' %></small>
    <%= f.text_field :city, type: 'text', id: "address-city-input-#{address.id}", :class => 'form-control'%>
  </div>

  <div class="form-group">
    <small><%= f.label :state, 'State' %></small>
    <%= f.text_field :state, type: 'text', id: "address-state-input-#{address.id}", :class => 'form-control'%>
  </div>

  <div class="form-group">
    <small><%= f.label :postcode, 'Postcode' %></small>
    <%= f.text_field :postcode, type: 'text', id: "address-postcode-input-#{address.id}", :class => 'form-control'%>
  </div>

  <div class="form-group">
    <small><%= f.label :country_or_region, 'Country or Region' %></small>
    <%= f.text_field :country_or_region, type: 'text', id: "address-countryorregion-input-#{address.id}", :class => 'form-control'%>
  </div>

  <span class='error-message'></span>

</div>