<div class="row" style="background-color: green">
  <div class="col-xs-12">
    <div class="row">
      <nav class="navbar navbar-default" role="navigation">

          <%= render "partials/site_title" %>

          <div class="col-xs-6 col-sm-9 mg-navbar-parent">

            <div class="row">

              <%= link_to store_index_path, class: "mg-resizable-11-14" do %>
                <div class="mg-navbar-item">
                  Store
                </div>
              <% end %>

              <%= link_to cart_index_path, class: "mg-resizable-11-14" do %>
                <div class="mg-navbar-item">
                  My Cart
                </div>
              <% end %>

              <%= link_to checkout_path, class: "mg-resizable-11-14" do %>
                <div class="mg-navbar-item">
                  Checkout
                </div>
              <% end %>

              <% if current_user %>

                <%= link_to user_orders_path(current_user), class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    My Orders
                  </div>
                <% end %>

                <%= link_to edit_user_path(current_user), class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    My Account
                  </div>
                <% end %>

                <% if current_user.usertype == 'staff' %>
                  <%= link_to manage_customers_path, class: "mg-resizable-11-14" do %>
                    <div class="mg-navbar-item">
                      Manage Customers
                    </div>
                  <% end %>
                <% end %>

                <%= link_to logout_path, method: :delete, class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    Log Out
                  </div>
                <% end %>

              <% else %>

                <%= link_to register_path, class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    Register
                  </div>
                <% end %>

                <%= link_to new_password_reset_path, class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    Forgot password
                  </div>
                <% end %>

                <%= link_to login_path, class: "mg-resizable-11-14" do %>
                  <div class="mg-navbar-item">
                    Login
