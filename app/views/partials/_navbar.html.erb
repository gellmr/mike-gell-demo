<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <nav class="navbar navbar-default" role="navigation">
        <!-- <div class="row"> -->

          <!-- Site Title -->
          <div class="col-xs-6 col-sm-4">

            <div class="row">
              <div class="col-xs-12">
                <h3>
                  <a class="mg-navbar-title" href="/" >Fuzzy Bear Electronics</a>
                </h3>
              </div>
            </div>

            <% if current_user %>
            <div class="row loggedInAs">
              <div class="col-xs-12">
                Logged in as <%= current_user.email %>
              </div>
            </div>
            <% end%>

          </div>

          <!-- Forgot Pw, Rego, Login -->
          <div class="col-xs-6 col-sm-8" style="padding-right: 0px">
            <ol class="nav navbar-nav navbar-right" style="margin: 0px;">

              <li>
                <%= link_to "Store", "/store", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "My Cart", "/cart", class: "mg-resizable-11-14" %>
              </li>

              <% if current_user %>

              <li>
                <%= link_to "My Account", "/users/#{current_user.id}/edit", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "My Orders", "/users/#{current_user.id}/orders", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "Change password", "/change-password", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "Log Out", "/logout", method: :delete, class: "mg-resizable-11-14" %>
              </li>

              <% else %>

              <li>
                <%= link_to "Register", "/register", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "Forgot my password", "/forgot-password", class: "mg-resizable-11-14" %>
              </li>

              <li>
                <%= link_to "Login", "/login", class: "mg-resizable-11-14" %>
              </li>

              <% end %>
            </ol>
          </div>

        <!-- </div> -->
      </nav>
    </div>
  </div>
</div>