<div class="row orders-page">
  <div class="col-xs-12">

    <%= render "/partials/flash_message" %>

    <div class="row">
      <div class="col-xs-12">
        <h3 class="content-heading">
          My Orders
        </h3>
      </div>
    </div>

    <% if @orders.count == 0 %>
      None at the moment.
    <% else %>

      <% @orders.each do |order| %>
        <%= link_to("/customer/#{current_user.id}/order/#{order.id}", html_options = {class: "noUnderline"}) do %>

          <div class="well solidBackground mg-hover">
            <%= render "orders/partials/order_head", {
              order: order, shipping_address: @ship_addresses[order.id], billing_address: @bill_addresses[order.id]
            } %>
          </div>

        <% end %>
      <% end %>
    <% end %>

  </div>
</div>
<br />
<br />