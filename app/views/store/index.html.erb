<div class="row">
  <div class="col-xs-12">

    <div class="centeredProducts">

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <h3>
              Available Products:
            </h3>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%= paginate @all_products %>
          </div>
        </div>
      </div>

      <form role="form">
        <% @products.each do |product| %>
          <%=
          render "partials/forsale_product_line", {
            product: product[:record],
            product_qty: product[:cart_qty]
          }
          %>
        <% end %>
      </form>

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%= paginate @all_products %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%=
            link_to "Go To Cart", cart_index_path, class: "btn btn-default go-to-cart-btn"
            %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
