<div class="row">
  <div class="col-xs-12">

    <!-- <div class="well storeContents transparentBackground"> -->
    <div class="storeContents">

      <form role="form">

        <% @products.each do |product| %>

          <div class="row well transparentBackground">

            <!-- Unit price and Qty in stock (hidden xs) -->
            <div class="col-sm-2 hidden-xs">
              <div class="row">
                <div class="col-xs-12">
                  $ <%= product.unitPrice %> <small class="greyText"> each </small>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <small class="greyText">
                    <%= product.quantityInStock %> in stock
                  </small>
                </div>
              </div>
            </div>

            <!-- Product name and description, Always visible. -->
            <div class="col-xs-12 col-sm-4">
              <strong>
                <%= product.name %>
              </strong>
              <br />
              <small>
                <%= product.description %>
              </small>
            </div>

            <!-- Price and Qty in Stock (Only visible xs) -->
            <div class="col-xs-12 hidden-sm hidden-md hidden-lg">
              $ <%= product.unitPrice %> <small class="greyText"> each
            </div>
            <div class="col-xs-12 hidden-sm hidden-md hidden-lg">
              <%= product.quantityInStock %> in stock </small>
            </div>

            <!-- Image tag, always visible -->
            <div class="col-xs-12 col-sm-4">
              <% img_url = "images/120x120/#{product.imageUrl}" %>
              <img src="<%= img_url %>" alt="<%= img_url %>" class="img-rounded centered-block-img">
            </div>

            <!-- Input: Qty to order -->
            <div class="col-xs-12 col-sm-2">
              <div class="row">
                <div class="form-group pull-left">
                  <div class="col-xs-12">
                    <label for="qtyToOrder-productId-<%=product.id%>">Qty to Order</label>
                  </div>
                  <div class="col-xs-8 col-sm-12">
                    <input type="text" class="form-control" id="qtyToOrder-productId-<%=product.id%>">
                  </div>
                </div>
              </div>
            </div>

          </div>
          
        <% end %>
      </form>

    </div>

  </div>
</div>
