<div class="row">
  <div class="col-xs-12">

    <div class="centeredProducts">

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <h3>
              Available Products:
            </h3>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="input-group search-input-group">
            <%=
            text_field_tag(
              'search-input',  # name
              "", # value
              {
                :type => "text",
                :class => "form-control search-input"
              }
            )
            %>
            <span class="input-group-btn">
              <button class="btn btn-default search-input" type="button">
                <span class="glyphicon glyphicon-search"></span>
                Search
              </button>
            </span>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%= paginate @all_products, :window => 2 %>
          </div>
        </div>
      </div>
      <hr class="narrow-hr"/>

      <form role="form">
        <% @products.each do |product| %>
          <%=
          render "partials/forsale_product_line", {
            product: product[:record],
            product_qty: product[:cart_qty],
            subtotal: nil,
            atStore: true
          }
          %>
        <% end %>
      </form>

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%= paginate @all_products, :window => 2 %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <%=
            link_to "Go To Cart", cart_index_path, class: "btn btn-default go-to-cart-btn"
            %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
