<div class="row">
  <div class="col-xs-12">

    <div class="centeredProducts">
      
      <div class="alert alert-warning" id="serverError" style="display:none;">
        There was a server error.
      </div>

      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <h3 class="cart-heading">
              My Cart - <%= @total_lines %> Lines
            </h3>
          </div>
        </div>
      </div>

      <div class="row cart-header-row">
        <!-- <hr class="narrow-hr" style="border-color:red;"/> -->

        <div class="col-xs-6">
          <div class="row">
            <%= link_to "Back To Store", store_index_path, class: "btn btn-default cart-header-btn" %>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="row">
            <div class="pull-right">
              <%=
              if @total_lines > 0
                link_to "Clear My Cart", clear_cart_path, class: "btn btn-default cart-header-btn", :method => 'delete' 
              else
                link_to "Clear My Cart", clear_cart_path, class: "btn btn-default cart-header-btn", :method => 'delete', disabled: "disabled" 
              end
              %>
            </div>
          </div>
        </div>
        <!-- <hr class="narrow-hr hidden-xs" style="border-color:blue;"/> -->

      </div>

      <%
      # Remote: This will make the form submit via ajax (Through unobtrusive javaScript)
      # A remote form automatically gets its authenticity token from the page's meta tag.
      %>
      <%= form_tag '/cart/submit', remote: true, id: "cartForm" %>
        <% @products.each do |product| %>
          <%=
          render "partials/forsale_product_line", {
            product: product[:record],
            product_qty: product[:cart_qty],
            subtotal: product[:subtotal],
            inCartIcons: false
          }
          %>
        <% end %>

        <%=
        render "cart/partials/summaryRow", {
          total_items: @total_items,
          grand_total: @grand_total
        }
        %>

        <% if @total_lines > 0 %>
        <div class="row">
          <div class="col-xs-12">
            <div class="text-center">
              <h3>
                <%=
                submit_tag "Place Order", {class: "btn btn-default cart-submit-btn"}
                %>
              </h3>
            </div>
          </div>
        </div>
        <% end %>
        
      </form>

    </div>
  </div>
</div>