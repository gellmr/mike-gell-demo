<div class="col-xs-12">
  <div class="well manage-users-page tiny-font">

    <div class="row">
      <div class="col-xs-10">
        <%= render "/legacyusers/partials/list_basic", {user:user} %>
        <hr>
        <div class="row">
          <div class="col-xs-12">
            <span class="feint datahead">User Type: </span>
            <span class="datarow"><%= user.usertype %></span>
          </div>
        </div>
      </div>
      <div class="col-xs-2">
        <%= link_to staff_delete_customer_path(user), method: :delete, class: 'user-delete pull-right', style:"text-decoration:none;" do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= link_to staff_edit_customer_path(user), class: 'pull-right' do %>
          <button id=<%="editUser#{user.id}"%> type="button" class="btn btn-default">Edit User</button>
        <% end %>
      </div>
    </div>
    
  </div>
</div>