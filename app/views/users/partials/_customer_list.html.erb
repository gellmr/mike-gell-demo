
<div class="col-xs-12 col-sm-6">
  <div class="well">

    <div class="row">
      <div class="col-xs-12">

        <%= link_to user_path(customer), method: :delete, class: 'pull-right', style:"text-decoration:none;" do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>

        <span class="feint">Name: </span>
        <%= customer.first_name %>
        <%= customer.last_name %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-12">
        <span class="feint">Email: </span><%= customer.email %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-6 col-sm-4 feint">Home Ph.</div>
      <div class="col-xs-6 col-sm-8">
        <%= customer.home_phone %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-6 col-sm-4 feint">Work Ph.</div>
      <div class="col-xs-6 col-sm-8">
        <%= customer.work_phone %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-6 col-sm-4 feint">Mobile Ph.</div>
      <div class="col-xs-6 col-sm-8">
        <%= customer.mobile_phone %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-12">
        <%= link_to edit_customer_path(customer), class: 'pull-right' do %>
          <button id=<%="editCustomer#{customer.id}"%> type="button" class="btn btn-default">Edit Customer</button>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
